require './lib/ride'
require './lib/biker'
require './lib/bike_club'
require 'pry'

RSpec.describe BikeClub do
  before(:each) do
    @club = BikeClub.new("The Rainbow Sprinkles")
  end
  describe "#initialize" do
    it 'exists' do
      expect(@club).to be_a(BikeClub)
    end
    it 'has a name' do
      expect(@club.name).to eq("The Rainbow Sprinkles")
    end
  end
end